{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,

    "strict": true,
    "noImplicitReturns": true,
    "useDefineForClassFields": true,
    
    // "declaration": true,
    // "declarationMap": true,
    "outDir": "dist", 
    "noEmit": true
  },
  "include": ["src/**/*"]
}